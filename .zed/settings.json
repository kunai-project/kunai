// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "linkedProjects": ["Cargo.toml", "kunai-ebpf/Cargo.toml"],
        "checkOnSave": true,
        "check": {
          "overrideCommand": [
            "cargo",
            "xtask",
            "clippy",
            "--",
            "--workspace",
            "--quiet",
            "--message-format=json",
          ],
          "invocationStrategy": "once",
        },
        "cargo": {
          "features": "all",
          "cfgs": ["debug_assertions", "target_arch=bpf", "target_arch=x86_64"],
          "buildScripts": {
            "enable": true,
            "invocationStrategy": "once",
            "overrideCommand": [
              "cargo",
              "xtask",
              "clippy",
              "--",
              "--workspace",
              "--quiet",
              "--message-format=json",
            ],
          },
        },
        "procMacro": {
          // maybe this can cause issues let's see
          "enable": true,
        },
        "runnables": {
          "extraArgs": ["--target=x86_64-unknown-linux-gnu"],
        },
      },
    },
  },
}
